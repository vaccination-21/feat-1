<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.user">
	<resultMap id="userResult" type="userVO">
		<result property="email" column="email" />
		<result property="id" column="id" />
        <result property="pwd" column="pwd" />
        <result property="name" column="name" />
        <result property="phoneNumber" column="phoneNumber" />
        <result property="regDate" column="regDate" />
	</resultMap> 
		
     <insert id="register"  parameterType="userVO">
		<![CDATA[
		 insert into my_user (email,id, pwd, name,phoneNumber)
		 values(#{id}, #{pwd}, #{name}, #{email},#{phoneNumber})
		]]>      
	</insert>
	
   
   	<update id="modify"  parameterType="userVO">
     <![CDATA[
	     update my_user
	     set id=#{id}, pwd=#{pwd}, name=#{name}, phoneNumber=#{phoneNumber}
	     where
	     email=#{email}
      ]]>      
   	</update> 
     
  	<select id="login"  resultType="userVO"   parameterType="userVO" >
	<![CDATA[
		select * from my_user	
		where id=#{id} and pwd=#{pwd}		
	]]>
  	</select> 
</mapper>